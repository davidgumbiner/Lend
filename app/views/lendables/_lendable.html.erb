<li>
  <% unless current_user?(@user) %>
	<div id="request_form">
	  <% if lendable.requested? %>
		Requested
	  <% else %>
		<%= form_for(lendable.requests.new) do |f| %>
		  <%= f.submit "Request me!", class: "btn btn-small" %>
		<% end %>
	  <% end %>
	  </div>
  <% end %>
  <span class="lendable_name"><%= lendable.name %></span>
  <span class="content"><%= lendable.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(lendable.created_at) %> ago.
  </span>
</li>